<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="mPresenter"
            type="coffee.flavors.unbit.view.presenters.ui.PresenterItemSettings"/>
    </data>
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/item_settings_root_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_settings_root_layout"
        android:background="@color/colorLightPrimary"
        android:backgroundTint="@color/colorLightPrimary"
        app:rippleColor="@color/colorLight">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/item_settings_title"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="@string/default_settings_name"
                android:textStyle="bold"
                android:textColor="@color/colorLight"
                android:gravity="center"
                android:paddingStart="08dp"
                android:paddingEnd="0dp"/> <!-- satisfy lint , code quality -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/item_settings_value"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="@string/default_settings_value"
                android:textColor="@color/colorLight"
                android:gravity="center"
                android:paddingStart="0dp"
                android:paddingEnd="08dp"/> <!-- satisfy lint , code quality -->
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>